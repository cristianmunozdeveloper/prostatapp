<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Prostatapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" >@color/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="regular" parent="Theme.Prostatapp">
        <item name="fontFamily">@font/font_family</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="regular_2" parent="Theme.Prostatapp">
        <item name="fontFamily">@font/font_family</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="title" parent="Theme.Prostatapp">
        <item name="fontFamily">@font/font_family_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="title_2" parent="Theme.Prostatapp">
        <item name="fontFamily">@font/font_family_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="title_3" parent="Theme.Prostatapp">
        <item name="fontFamily">@font/font_family_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="title.black" parent="Theme.Prostatapp">
        <item name="fontFamily">@font/font_family_title</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">80sp</item>
    </style>

    <style name="SCBSwitch" parent="Theme.Prostatapp">
        <item name="colorControlActivated">@color/blue_button</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>
</resources>